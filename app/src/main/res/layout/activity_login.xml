<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sr7d.shubhamraja.StColumbasCollege.Login"
    android:background="#052560">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Login"
            android:layout_gravity="center_horizontal"
            android:textColor="#f72d09"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter your Email here..."
            android:id="@+id/editTextEmail1"
            android:textColor="#f75509"
            android:textColorHint="#f70899" />

        <EditText
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="Enter your Password here..."
            android:id="@+id/editTextPassword1"
            android:textColorHint="#7f5509"
            android:textColor="#f75509" />
        <Button
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/buttonLogin"
            android:background="#7fb3d5" />


    </LinearLayout>

    <TextView
        android:textAlignment="center"
        android:text="Not a register user? Signup here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSignup"
        android:textSize="18sp"
        android:textColor="#4adc17"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <com.google.android.gms.common.SignInButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/sign_in_button"
        android:layout_alignBottom="@+id/textViewSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

</RelativeLayout>
